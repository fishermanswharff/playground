<h1>Listing characters</h1>

<table>
  <tr>
    <th>Title</th>
    <th>Text</th>
    <th>Superpower</th>
    <th colspan="3"></th>
  </tr>

  <% @characters.each do |character| %>
    <tr>
      <td><%= character.name %></td>
      <td><%= character.nickname %></td>
      <td><%= character.superpower %></td>
      <td><%= link_to 'Show', character_path(character) %></td>
      <td><%= link_to 'Edit', edit_character_path(character) %></td>
      <td><%= link_to 'Delete', character_path(character), method: :delete, data:{confirm: 'Are you sure?'} %></td>
    </tr>
  <% end %>
</table>


<p><%= link_to 'Create New Character', new_character_path %></p>
<p><%= link_to 'Back', root_path %></p>
